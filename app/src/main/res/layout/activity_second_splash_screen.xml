<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    tools:context=".SecondSplashScreen">

    <TextView
        android:id="@+id/user_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET STARTED AS A USER"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_35sdp" />

    <TextView
        android:id="@+id/user_essay"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="wrap_content"
        android:text="To use this app as a user, you do not need to login. Please click on the button below to get started."
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <Button
        android:id="@+id/user"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_39sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:backgroundTint="#50C2C9"
        android:text="Get Started"
        android:textSize="@dimen/_17sdp"/>


    <TextView
        android:id="@+id/admin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN AS AN ADMIN"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_55sdp" />

    <TextView
        android:id="@+id/essay"
        android:layout_width="@dimen/_295sdp"
        android:layout_height="wrap_content"
        android:text="To login as an Admin, you need a set of login credentials. If you do not have these credentials, please use the button above."
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_6sdp"/>

    <Button
        android:id="@+id/admin"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_39sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:backgroundTint="#50C2C9"
        android:text="LOGIN"
        android:textSize="@dimen/_17sdp"/>


</LinearLayout>